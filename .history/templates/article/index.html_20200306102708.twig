{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col">
			<h1>Article</h1>
		</div>
	</div>
	<div class="row">
		<p class="text-right">
			<a href="{{ url('article.form') }}" class="btn btn-primary">Ajouter</a>
		</p>
		{% for product in results %}
			<div class="col-sm-3">
				<img src="{{ asset('img/article/' ~ article.image) }}" class="img-fluid" alt="">
				<h4>{{ product.name }}</h4>

				<p>
					{#<a href="{{ url('product.details', { id: product.id }) }}" class="btn btn-primary">Visualiser</a>#}

				</p>
			</div>
		{% endfor %}
	</div>


{% endblock %}
